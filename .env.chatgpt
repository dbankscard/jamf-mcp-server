# Jamf MCP Server Configuration for ChatGPT Deployment
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=production

# Jamf Pro Configuration
JAMF_URL=https://your-instance.jamfcloud.com
JAMF_CLIENT_ID=your-jamf-api-client-id
JAMF_CLIENT_SECRET=your-jamf-api-client-secret
# Optional: Basic auth (if not using OAuth2 for Jamf)
# JAMF_USERNAME=your-jamf-username
# JAMF_PASSWORD=your-jamf-password
JAMF_READ_ONLY=false
JAMF_USE_ENHANCED_MODE=true

# OAuth Provider Configuration
OAUTH_PROVIDER=auth0  # Options: auth0, okta, dev

# Auth0 Configuration (if using Auth0)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://your-deployment-url.com
OAUTH_REDIRECT_URI=https://chatgpt.com/auth/callback

# Okta Configuration (if using Okta)
# OKTA_DOMAIN=https://your-domain.okta.com
# OKTA_CLIENT_ID=your-okta-client-id
# OKTA_CLIENT_SECRET=your-okta-client-secret

# Security Configuration
REQUIRED_SCOPES=read:jamf write:jamf
# For development only - in production, use proper OAuth
# JWT_SECRET=your-secret-key-for-dev

# CORS Configuration (usually not needed to change)
# ALLOWED_ORIGINS=https://chat.openai.com,https://chatgpt.com