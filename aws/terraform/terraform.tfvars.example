# AWS Configuration
aws_region   = "us-east-1"
environment  = "production"
project_name = "jamf-mcp-server"

# ECS Configuration
task_cpu      = "512"
task_memory   = "1024"
desired_count = 2
min_capacity  = 2
max_capacity  = 10

# SSL Certificate (obtain from ACM)
# certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# Application Configuration
oauth_provider     = "auth0"
oauth_redirect_uri = "https://chatgpt.com/auth/callback"
jamf_read_only     = false
log_level          = "info"

# Jamf Configuration (sensitive - use environment variables or Terraform Cloud)
jamf_url           = "https://your-instance.jamfcloud.com"
jamf_client_id     = "your-jamf-client-id"
jamf_client_secret = "your-jamf-client-secret"

# Auth0 Configuration (sensitive - use environment variables or Terraform Cloud)
auth0_domain        = "your-tenant.auth0.com"
auth0_client_id     = "your-auth0-client-id"
auth0_client_secret = "your-auth0-client-secret"
auth0_audience      = "https://your-api-identifier"
required_scopes     = "read:jamf write:jamf"