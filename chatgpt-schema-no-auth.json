{
  "openapi": "3.0.0",
  "info": {
    "title": "Jamf MCP Server (ChatGPT)",
    "version": "1.0.0",
    "description": "Jamf Pro device management via MCP"
  },
  "servers": [
    {
      "url": "https://glance-rosa-sec-tone.trycloudflare.com"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "description": "Check if the server is running",
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "description": "Server is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "service": {"type": "string"},
                    "version": {"type": "string"},
                    "uptime": {"type": "number"},
                    "timestamp": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mcp": {
      "get": {
        "summary": "Connect to MCP server",
        "description": "MCP endpoint (requires bearer token - pass as query param for ChatGPT)",
        "operationId": "connectMCP",
        "parameters": [
          {
            "name": "token",
            "in": "query",
            "required": false,
            "description": "JWT token for dev mode",
            "schema": {
              "type": "string",
              "default": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiJkZXYtdXNlci0wMDEiLCJlbWFpbCI6ImRldkBqYW1mLW1jcC5sb2NhbCIsIm5hbWUiOiJEZXZlbG9wbWVudCBVc2VyIiwic2NvcGUiOiJyZWFkOmphbWYgd3JpdGU6amFtZiIsInBlcm1pc3Npb25zIjpbInJlYWQ6amFtZiIsIndyaXRlOmphbWYiXSwiaWF0IjoxNzYwODk1MTYxLCJleHAiOjE3NjE0OTk5NjF9.U6Au2fzy7AewSsRKdjhgTRd8nVFdApVpHJGRxKgNERM"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "MCP connection established",
            "content": {
              "text/event-stream": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}